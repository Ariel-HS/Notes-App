<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Search"
            android:minHeight="48dp"></EditText>

        <Button
            android:id="@+id/create"
            android:layout_width="48dp"
            android:layout_height="53dp"
            android:layout_margin="5dp"
            android:backgroundTint="#008000"
            android:contentDescription="Click to create notes"
            android:foreground="@drawable/ic_create"
            android:foregroundTint="#191b1c"
            android:padding="0dp"></Button>

        <Button
            android:id="@+id/setting"
            android:layout_width="48dp"
            android:layout_height="53dp"
            android:layout_margin="5dp"
            android:backgroundTint="#008000"
            android:foreground="@drawable/ic_settings"
            android:contentDescription="Click to open settings"
            ></Button>
    </LinearLayout>

  </LinearLayout>